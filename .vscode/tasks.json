{
  // See https://go.microsoft.com/fwlink/?LinkId=733558 
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "test",
      "group": "test",
      "problemMatcher": [
        "$jasmine"
      ]
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$tslint5"
      ]
    },
    {
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "type": "npm",
      "script": "dist",
      "problemMatcher": []
    }
  ]
}